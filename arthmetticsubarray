#include <stdio.h>

int countArithmeticSubarrays(int arr[], int n) {
    int count = 0;
    int total = 0;

    for(int i = 2; i < n; i++) {
        if(arr[i] - arr[i-1] == arr[i-1] - arr[i-2]) {
            total++;
            count += total;
        } else {
            total = 0;
        }
    }

    return count;
}

int main() {
    int arr[] = {1,3,5,7,9};
    int n = 5;

    printf("Total Arithmetic Subarrays = %d", countArithmeticSubarrays(arr, n));

    return 0;
