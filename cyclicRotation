#include <stdio.h>

int main() {
    int arr[] = {1, 2, 3, 4};
    int n = 4;
    int i, j, k, temp;

    for(i = 0; i < n; i++) {

        // Print current array
        for(j = 0; j < n; j++) {
            printf("%d ", arr[j]);
        }
        printf("\n");

        // Left rotate by 1
        temp = arr[0];
        for(k = 0; k < n - 1; k++) {
            arr[k] = arr[k + 1];
        }
        arr[n - 1] = temp;
    }

    return 0;
}
